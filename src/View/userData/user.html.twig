{% extends 'layout.html.twig' %}


{% block content %}
    <div class="text-center mt-5 text-white">
        <h1>Inscription</h1>
    </div>
    <div class="row m-auto d-flex justify-content-center mt-4 w-75">
        <form class="col col-lg-4 col-md-6 col-sm-10 border rounded p-4 bg-white bg-opacity-75" method="post">
            <i class="fas fa-user-edit fa-2x d-flex justify-content-center mb-3"></i>

            <div class="form-group form-floating">
                <input type="text" name="pseudo" class="form-control border-bottom-0 rounded-0" id="floatingInput">
                <label for="floatingInput">Pseudo</label>
            </div>
            <div class="form-group form-floating">
                <input type="email" name="mail" class="form-control border-bottom-0 rounded-0" id="floatingInput">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-group form-floating">
                <input type="password" name="password" class="form-control rounded-0 rounded-bottom" id="floatingPassword">
                <label for="floatingPassword">Mot de passe</label>
            </div>
            <div class="form-group form-floating">
                <input type="text" name="github_name" class="form-control rounded-0 rounded-bottom" id="floatingInput">
                <label for="floatingInput">github</label>
            </div>
            {% for error in errors %}
                <div class="m-auto text-center">
                    <p class="text-danger">{{ error }}</p>
                </div>
            {% endfor %}
            <div class="d-flex justify-content-center">
                <button class="rounded-pill fs-6 border-2 btn  btn-sm mb-3 mt-4 p-2" type="submit">Je m'inscris</button>
            </div>
            <p class="text-center">DÃ©ja inscrit ? <a href="/" class="text-decoration-none ">Connecte toi</a>
        </form>
    </div>
{% endblock %}