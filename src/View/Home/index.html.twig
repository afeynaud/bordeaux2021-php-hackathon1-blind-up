{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row m-auto d-flex justify-content-center mt-1 pt-5 w-75 mb-5">
        <form class="col col-lg-4 col-md-6 col-sm-10 border  p-4 bg-white slideInUp bg-opacity-75" method="post">
            <i class="fas fa-user-ninja fa-2x d-flex justify-content-center mb-3"></i>
            {% for error in errors %}
                <div class="m-auto mt-3 text-center">
                    <p class="text-danger">{{ error }}</p>
                </div>
            {% endfor %}
            <div class="form-group form-floating fadeInLeftBig">
                <input type="email" name="mail" class="form-control border-bottom-0 rounded-0 rounded-top" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-group form-floating fadeInRightBig">
                <input type="password" name="password" class="form-control rounded-0 rounded-bottom" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Mot de passe</label>
            </div>
            <div class="d-flex justify-content-center">
                <button class="rounded-pill fs-6 border-2 btn btn-outline-dark btn-sm mb-3 mt-4 p-2" type="submit">Connexion</button>
            </div>
            <p class="text-center">Pas encore inscrit ? <a href="/user/inscription/" class="text-decoration-none text-dark">Cr√©er un compte</a>
        </form>
    </div>
{% endblock %}

